<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Exposure Hub Smoke" verbose="4" parallel="none" thread-count="2">

	<listeners>
		<listener
			class-name="ehub.com.listeners.ExtentReportListener" />
	</listeners>

	<test name="Login Page" enabled="true">

		<classes>
			<class name="TestSmoke.LoginPageTest"></class>
		</classes>
	</test>

	<test name="Scenario #01 : Create New Policy - All Classes" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR01_CreateNewPol_AllClasses"></class>
		</classes>
	</test>

	<test name="Scenario #02 : Update Policy" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR02_UpdatePolicy"></class>
		</classes>
	</test>

	<test name="Scenario #03 : Delete Policy" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR03_DeletePolicy"></class>
		</classes>
	</test>

	<test name="Scenario #04 : Quick Navigation" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR04_QuickNavigation"></class>
		</classes>
	</test>

	<test name="Scenario #05 : MiM (Module in Module)" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR05_MiMNavigation"></class>
		</classes>
	</test>

	<test name="Scenario #06 : Import - Onshore Schedules" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR06_ImportOnshoreSchedules"></class>
		</classes>
	</test>

	<test name="Scenario #07 : Import - Offshore Schedules" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR07_ImportOffshoreSchedules"></class>
		</classes>
	</test>

	<test name="Scenario #08 : Quick Quote" enabled="false">

		<classes>
			<class
				name="TestSmoke.SCR08_QuickQuote"></class>
		</classes>
	</test>

</suite>